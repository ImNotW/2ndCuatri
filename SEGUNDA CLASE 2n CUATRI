package Service;

import java.util.Scanner;
import javax.swing.JOptionPane;
/**
 * Clase 2 del segundo cuatrimestre
 */
public class main {
/**
 * 
 * @param args Por defecto se usa java para poder adivinar un nÃºmero random
 */
	public static void main(String[] args) { //Semana 2

		
		Scanner scan = new Scanner(System.in);
		
		

		
		int opc;
		System.out.println("\n1-Primer ejercicio \n2-Segundo Ejercicio \n3-Ejercicio 3 \n4-Ejercicio 4 ");
		opc = scan.nextInt();
		
		switch (opc) {
		
		
		case 1:{
			
			JOptionPane.showMessageDialog(null, "Â¿NÃºmero par o no?");
			boolean intentar = false;
			
			do {
				
				try {
					
					int num = Integer.parseInt(JOptionPane.showInputDialog("Ingrese el nÃºmero"));
					
					while (intentar == false) {
					if (num < 0) {
						JOptionPane.showMessageDialog(null, "Digite de nuevo otro nÃºmero diferente.\nTiene que ser mayor a cero", "ERROR" , JOptionPane.WARNING_MESSAGE);
						break;
					}
					else {
						intentar = true;
					}
					}
					
					if (num %2 == 0) {
						
						JOptionPane.showMessageDialog(null, "El nÃºmero ingresado es par");
						
						intentar = true;
					}else {
						JOptionPane.showMessageDialog(null, "Vuelva pronto");
					}
					
				}catch(NumberFormatException e) {
					JOptionPane.showMessageDialog(null,"lo digitado no corresponde a un nÃºmero entero " + e.getMessage());
				}
				
			}while (intentar = false);
			
			
		
		}
		
		case 2:{
			
			boolean adivino = false;
			do {
			try {
			int num1 = Integer.parseInt(JOptionPane.showInputDialog("Ingrese el nÃºmero mÃ¡ximo"));
			
			int randomNum = (int)(Math.random()* num1);
			
			int numTry;
	
			do {
			
				numTry = Integer.parseInt(JOptionPane.showInputDialog("Intente adivinarlo"));
			
			
			if (numTry == randomNum) {
				JOptionPane.showMessageDialog(null, "Felicidades! adivinÃ³ el nÃºmero");
				adivino = true;
				break;
			}else {
				JOptionPane.showMessageDialog(null," Intente de nuevo!", "ERROR", JOptionPane.WARNING_MESSAGE);
				JOptionPane.showMessageDialog(null,"Correcto: " + randomNum);
				

			}
			
			}while (randomNum != numTry);
			
			}catch(NumberFormatException e) {
				JOptionPane.showMessageDialog(null, "Ingrese Ãºnicamente nÃºmeros por favor", "ADVERTENCIA!ðŸ˜“", JOptionPane.WARNING_MESSAGE);
			}
			}while(adivino);

			
			
		}
		
		case 3:{
			
			try {
			double num1 = Integer.parseInt(JOptionPane.showInputDialog("Ingrese el valor de A"));
			double num2 = Integer.parseInt(JOptionPane.showInputDialog("Ingrese el valor de B"));
			
			double resultado = num1 / num2;
			
			JOptionPane.showMessageDialog(null, "El valor de la divisiÃ³n de A entre B es: " + resultado);
			
			
			}catch(NumberFormatException e) { // Para que solo permita nÃºmeros
				JOptionPane.showMessageDialog(null, "Ingrese un valor numÃ©rico por favor ", "ERROR", JOptionPane.WARNING_MESSAGE);
			}catch(ArithmeticException ae) { // Por divir entre 0
				JOptionPane.showMessageDialog(null, "Por dividir entre cero ", "ERROR", JOptionPane.WARNING_MESSAGE);
			}catch(Exception ec) { // Por si todo falla
				JOptionPane.showMessageDialog(null, "OcurriÃ³ un error ", "ERROR", JOptionPane.WARNING_MESSAGE);

			}
			
			
			
			

		}
		
		case 4:{
			
			try {
			int valor = Integer.parseInt(JOptionPane.showInputDialog("Ingrese la catidad de estudiantes"));
			int vectorEstudiantes[] = new int[valor];
			
			int valor2 = Integer.parseInt(JOptionPane.showInputDialog("Â¿Cuantas notas desea ingresar?"));
			
			
			for (int i = 0; i < valor2; i++) {
				
				vectorEstudiantes[i] =  Integer.parseInt(JOptionPane.showInputDialog("Ingrese la calificaciÃ³n: " + (i +1)));
				
			}
			JOptionPane.showMessageDialog(null, "\nA continuaciÃ³n se muestran las calificaciones guardadas", "IMPORTANTE", JOptionPane.WARNING_MESSAGE);
			for (int j = 0; j < valor2; j++) {
				
				JOptionPane.showMessageDialog(null, "\nCalificaciÃ³n nÃºmero: "+ (j+1) + " = " + vectorEstudiantes[j]);
			}
			}catch(ArrayIndexOutOfBoundsException Ai) {
				JOptionPane.showMessageDialog(null,"Se ha intentado acceder a un espacio del vector que no existe");
			}
			catch(NumberFormatException nb) {
				JOptionPane.showMessageDialog(null,"Tiene que ingresar algÃºn dato numÃ©rico");
			}
			catch(Exception ex) {
				JOptionPane.showMessageDialog(null,"OcurriÃ³ un error");

			}
		}
		
		
		}
		
	}

}
